{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": ".",
    "outDir": "./dist/tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2017",
    "lib": ["ESNext", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "types": ["node", "jest"],
    "allowJs": true,
    "paths": {
      "@boomering/object-id": ["packages/object-id/src/index.ts"],
      "@boomering/repository": ["packages/repository/src/index.ts"],
      "@boomering/common": ["packages/common/src/index.ts"],
      "@boomering/config": ["packages/config/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
